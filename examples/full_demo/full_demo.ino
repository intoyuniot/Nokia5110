    lcd.clear();
    lcd.gotoXY(6, 2); // 设置光标位置
    lcd.string("Hello World!");
    delay(1000);

    lcd.clear();
    lcd.gotoXY(0, 2);
    lcd.string(hello[0]);
    lcd.gotoXY(0, 3);
    lcd.string(hello[1]);
    delay(1000);

    lcd.clear();
    for (int i = 0; i < 84 * 6; i++)
    {
        lcd.write(LCD_DATA, 0xFF);
        lcd.write(LCD_DATA, 0x00);
    }
    delay(1000);
}
